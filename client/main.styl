@import "_variables"

twitch-color = #6441A5
paper-button#at-twitch.at-social-btn
  color: white
  background-color: twitch-color
  &:hover
    color: white
    background-color: darken(twitch-color, 5%)

*
  box-sizing: border-box

body
  font-family: body-font
  font-weight: 300
  color: text-color
  box-sizing: border-box
  background: body-background

a
  color: link-color
  &:visited
    color: link-color-visited

h1, h2, h3
  font-family: headline-font
  font-weight: 300
h4, h5, h6
  font-family: headline-font
  font-weight: 400

p
  font-weight: 300
  strong
    font-weight: 400

#mainTitle
  font-family: headline-font
  transition: font-size .2s, font-weight .2s
  font-weight: 300
  .tall &
    line-height: 3.5rem
    font-size: 2.5rem

.main-content
  background: content-background
  padding: common-spacing
  margin: common-spacing auto
  max-width: main-brake

.template-loading
  text-align center
  
.at-form
  max-width: 480px

.login-box
  margin: 0 auto
  background: body-background
  iron-icon.fa
    vertical-align: top
