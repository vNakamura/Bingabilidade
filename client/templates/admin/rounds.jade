template(name="AdminRounds")
  
  if currentRound
    h1 Rodada atual
    +with currentRound
      .layout.horizontal.end
        .flex
          p
            strong=name
            | (iniciada {{livestamp createdAt}})
        div
          paper-button#currentRoundEnd Encerrar
  
  h1 Nova rodada
  .layout.horizontal.end
    .flex
      paper-input#newRoundName(label="Nome")
    div
      paper-button#newRoundStart Iniciar
    
  h1 Hist√≥rico
  each roundHistory
    p
      strong= name
      | (encerrada {{livestamp updatedAt}})
