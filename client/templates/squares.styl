@import "../_variables"

.square-list
  paper-item
    margin: 0 (-common-spacing)
    padding: (common-spacing / 2) common-spacing
    font-family: body-font
    paper-icon-button
      opacity: .3
    &:hover
      background-color: body-background
      paper-icon-button
        opacity: 1
  paper-item-body
    div[secondary]
      font-size .9em
  paper-fab
    position fixed
    right (common-spacing * 2)
    bottom (common-spacing * 2)

#edit-dialog
  width: main-brake
