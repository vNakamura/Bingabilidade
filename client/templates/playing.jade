template(name="playing")
  if currentRound
    p Participantes da rodada:
    h2= currentRound.name
    .players
      each roundCards
        paper-button(raised)
          .mini-card
            each square_ids
              if checked
                .square.checked
              else
                .square
          +avatarAndName(_id=owner_id)
          
  else
    +noRound

template(name="avatarAndName")
  +with getUser _id
    +avatar(user=this shape="circle")
    .name
      = profile.name
